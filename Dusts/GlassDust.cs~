using System;
using Terraria;
using Terraria.ModLoader;

namespace ChemistryClass.Dusts {
    public class GlassDust : ModDust {

        public override bool Update(Dust dust) {

            dust.alpha += 3;
            dust.rotation += dust.velocity.X / 100f;

            if (dust.alpha > 255) dust.active = false;

            return true;

        }

    }
}
