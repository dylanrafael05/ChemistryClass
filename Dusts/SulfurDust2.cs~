using System;
using Terraria;
using Terraria.ModLoader;

namespace ChemistryClass.Dusts {
    public class SulfurDust2 : ModDust {

        public override void OnSpawn(Dust dust) {

            dust.alpha = 0;
            dust.noLight = true;
            dust.noGravity = true;

        }

        public override bool MidUpdate(Dust dust) {

            dust.alpha += 5;

            if (dust.alpha >= 250) dust.active = false;

            return false;

        }

    }
}
