using System;
using Terraria;
using Terraria.ModLoader;

namespace ChemistryClass.ModUtils {
    public class UtilsGlobalItem : GlobalItem {

        public override bool InstancePerEntity => true;

        public int previousDamage;
        public int previousKnockback;
        public int previousCrit;

        public override void PostUpdate(Item item) {

            previousDamage = item.damage;
            previousKnockback = item.damage;
            previousCrit = item.crit;

        }

    }
}
