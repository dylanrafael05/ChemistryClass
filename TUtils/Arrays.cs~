using System;
using Microsoft.Xna.Framework;

namespace TUtils {
    public static class Arrays {

        public static T GetBounded<T>(this T[,] ts, int i, int j)
            => ts[Mathematics.Limit(ref i, 0, ts.GetLength(0) - 1), Mathematics.Limit(ref j, 0, ts.GetLength(1) - 1)];
        public static T GetVoided<T>(this T[,] ts, int i, int j)
            => !Mathematics.IsBetween(ts, 0, ts.GetLength(0), true, false);

    }
}
