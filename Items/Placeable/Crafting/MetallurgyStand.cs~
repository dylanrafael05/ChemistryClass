using System;
using Terraria;
using Terraria.ID;
using Terraria.ModLoader;

namespace ChemistryClass.Items.Placeable {
    public class MetallurgyStand : ModItem {

        public override void SetStaticDefaults() {

            Tooltip.SetDefault("Used to make special metallic materials.");

        }

        public override void SetDefaults() {

            item.rare = 1;
            item.value = Item.buyPrice(0, 0, 5, 0);

            item.useStyle = ItemUseStyleID.SwingThrow;
            item.useTime = 35;
            item.useAnimation = 35;
            item.UseSound = SoundID.Item1;

            item.autoReuse = true;

            item.consumable = true;

            item.maxStack = 99;

            item.createTile = ModContent.TileType<Tiles.BeakerTile>();

        }

        public override void AddRecipes() {

            this.SetRecipe(

                TileID.Anvils,
                1,
                (ModContent.ItemType<Beaker>(), 1),
                (ItemID.Torch, 10),
                (ItemID.IronBar, 12),
                (ItemID.HellstoneBar, 4)

                );

        }

    }
}
