using System;
using Terraria;
using Microsoft.Xna.Framework;
using Microsoft.Xna.Framework.Graphics;
using Terraria.ModLoader;

namespace ChemistryClass.Projectiles {
    public class SulfuricCloud : ModNPC {

        public float VelocityX {
            get => npc.ai[0];
            set => npc.ai[0] = value;
        }
        public bool AlphaCycle {
            get => npc.ai[1] != 0;
            set => npc.ai[1] = value ? 1 : 0;
        }

        public Vector2 Velocity => new Vector2(VelocityX, 0);

        public override void SetDefaults() {

            npc.lifeMax = 5;
            npc.defense = 0;

            npc.noGravity = true;
            npc.noTileCollide = true;
            npc.npcSlots = 0.1f;

            npc.damage = 10;
            npc.dontCountMe = true;

            npc.value = 0;
            npc.width = 32;
            npc.height = 14;

            float vecX = Main.rand.NextFloat(6f, 9f);
            VelocityX = VelocityX >= 0 ? vecX : -vecX; 

        }

        public override void AI() {

            npc.

        }

    }
}
